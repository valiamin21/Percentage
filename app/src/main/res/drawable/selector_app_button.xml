<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <ripple android:color="#fff">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/app_button_radius"/>
                    <gradient android:startColor="@color/primaryLightColor" android:endColor="#FFF" android:angle="-90"/>
                    <stroke android:color="@color/colorPrimary" android:width="1dp" android:dashWidth="5dp" android:dashGap="5dp"/>
                </shape>
            </item>
        </ripple>

    </item>
    <item android:state_pressed="true">
        <ripple android:color="#fff">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/app_button_radius"/>
                    <gradient android:startColor="@color/primaryLightColor" android:endColor="#FFF" android:angle="-90"/>
                </shape>
            </item>
        </ripple>

    </item>
</selector>
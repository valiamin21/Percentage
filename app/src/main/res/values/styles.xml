<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyNumberPickerTheme" parent="@android:style/Widget.Material.NumberPicker" tools:targetApi="n">
        <item name="colorControlNormal">#FFF</item>
        <item name="android:layout_marginRight">@dimen/standard_margin_small</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin_small</item>
    </style>

    <style name="AppTheme.MyNumberPickerTitlesStyle">
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
    </style>

    <style name="PercentTextViewsStyle">
        <item name="android:layout_marginLeft">@dimen/standard_margin_small</item>
        <item name="android:layout_marginRight">@dimen/standard_margin_small</item>
        <item name="android:background">@drawable/selector_percent_text</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

</resources>
